{% comment %}
  Expert Team Section – erstellt von Payam Abdolmohammadi
  Beschreibung: Zeigt ein flexibles Raster von Expert:innen-Karten mit Namen, Rolle, Beschreibung und Bild.
{% endcomment %}

{{ 'section-expert-team.css' | asset_url | stylesheet_tag }}

<section class="expert-team-section">
  <div class="page-width">
    <div class="section-header">
      {% if section.settings.heading != blank %}
        <h2 class="section-title">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="section-subheading">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    <div class="expert-team">
      {% for block in section.blocks %}
        <div class="expert-card">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.name | escape }}">
          {% endif %}

          <h3>{{ block.settings.name }}</h3>
          <p><strong>{{ block.settings.role }}</strong></p>
          <p>{{ block.settings.description }}</p>

          {% if block.settings.link_label != blank and block.settings.link_url != blank %}
            <a href="{{ block.settings.link_url }}" class="expert-link">
              {{ block.settings.link_label }}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Unser Expertenteam",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Titel",
      "default": "Unser Experten-Team"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Untertitel",
      "default": "Lerne unser engagiertes Team aus Ernährungs- und Gesundheitsexperten kennen."
    }
  ],
  "blocks": [
    {
      "type": "expert",
      "name": "Expertenkarte",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Bild"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Vorname Nachname"
        },
        {
          "type": "text",
          "id": "role",
          "label": "Position",
          "default": "Ernährungsberater:in"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Beschreibung",
          "default": "Kurzbeschreibung des Experten oder der Expertin."
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Link-Text",
          "default": "Mehr erfahren"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link-URL"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Unser Expertenteam",
      "category": "Abschnitte"
    }
  ]
}
{% endschema %}
