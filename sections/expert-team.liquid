<section class="expert-team">
  <div class="page-width">
    <h2>{{ section.settings.section_heading }}</h2>
    <div class="rte">{{ section.settings.section_description }}</div>

    <div class="expert-grid">
      {% for block in section.blocks %}
        <div class="expert-item">
          {% if block.settings.photo %}
            <img src="{{ block.settings.photo | img_url: 'medium' }}" alt="{{ block.settings.name }}">
          {% endif %}
          <h3>{{ block.settings.name }}</h3>
          <p class="role">{{ block.settings.role }}</p>
          <div class="bio">{{ block.settings.bio }}</div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.expert-team {
  padding: 60px 0;
  text-align: center;
}
.expert-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 30px;
  margin-top: 30px;
}
.expert-item img {
  border-radius: 50%;
  width: 150px;
  height: 150px;
  object-fit: cover;
}
.role {
  color: #777;
  font-style: italic;
}
</style>

{% schema %}
{
  "name": "Unser Expertenteam",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Titel",
      "default": "Unser Expertenteam"
    },
    {
      "type": "richtext",
      "id": "section_description",
      "label": "Beschreibung",
      "default": "<p>Unser Team aus Expertinnen und Experten teilt Leidenschaft und Wissen f√ºr Bitterstoffe.</p>"
    }
  ],
  "blocks": [
    {
      "type": "expert",
      "name": "Experte",
      "settings": [
        {
          "type": "image_picker",
          "id": "photo",
          "label": "Foto"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name"
        },
        {
          "type": "text",
          "id": "role",
          "label": "Rolle"
        },
        {
          "type": "richtext",
          "id": "bio",
          "label": "Kurzbeschreibung"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Unser Expertenteam",
      "category": "Abschnitte"
    }
  ]
}
{% endschema %}
